<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RedCalendar" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorForeground">@color/gray</item>
        <item name="android:colorAccent">@color/red</item>
        <item name="android:colorPrimary">@color/red</item>
        <item name="android:colorPrimaryDark">@color/dark_red</item>
        <item name="materialButtonStyle">@style/RedButtonStyle</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="FormFieldGroup">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
</resources>
